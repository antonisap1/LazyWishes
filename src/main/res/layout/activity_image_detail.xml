<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/imageDetailVLayoutHeight"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/zero"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/image_description_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view_details"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/minusTwo"
        android:layout_marginTop="@dimen/One"
        android:padding="@dimen/text_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

</RelativeLayout>